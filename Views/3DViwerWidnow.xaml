<winex:WindowEx
    x:Class="NanoFlow.Views._3DViwerWidnow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:editors="using:Syncfusion.UI.Xaml.Editors"
    xmlns:hx="using:HelixToolkit.WinUI"
    xmlns:local="using:NanoFlow.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winex="using:WinUIEx"
    Title="3DViwerWidnow"
    mc:Ignorable="d">

    <Grid x:Name="rootContainer">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ScrollViewer
                Grid.Column="0"
                HorizontalScrollMode="Auto"
                VerticalScrollMode="Auto">
                <TextBox
                    Padding="10"
                    AcceptsReturn="True"
                    FontFamily="Consolas"
                    FontSize="14"
                    IsReadOnly="True"
                    Text="{x:Bind _3DViwerViewModel.FileContent, Mode=OneWay}"
                    TextWrapping="Wrap" />
            </ScrollViewer>

            <!--  3D Viewer  -->
            <hx:Viewport3DX
                x:Name="Viewport3DX"
                Grid.Column="1"
                BackgroundColor="Gray"
                Camera="{x:Bind _3DViwerViewModel.Camera}"
                EffectsManager="{x:Bind _3DViwerViewModel.EffectsManager, Mode=OneWay}"
                IsPinchZoomEnabled="True"
                IsTouchRotateEnabled="True"
                IsZoomEnabled="True"
                ShowCoordinateSystem="True"
                ShowViewCube="False" />

        </Grid>
    </Grid>
</winex:WindowEx>
