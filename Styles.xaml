<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NanoFlow"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

    <Style
        x:Key="CustomAppBarButtonStyle"
        TargetType="muxc:AppBarButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="muxc:AppBarButton">
                    <StackPanel Padding="5">
                        <muxc:FontIcon
                            HorizontalAlignment="Center"
                            FontSize="24"
                            Glyph="{TemplateBinding Tag}" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            Text="{TemplateBinding Label}" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="TextBoxStyle"
        TargetType="TextBox">
        <Setter Property="Background" Value="{ThemeResource TextControlBackground}" />
        <Setter Property="Foreground" Value="{ThemeResource TextControlForeground}" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Width" Value="300" />
        <Setter Property="Margin" Value="0,5" />
        <Setter Property="BorderBrush" Value="{ThemeResource TextControlBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="CornerRadius" Value="8" />

    </Style>

    <Style
        x:Key="ComboBoxStyle"
        TargetType="ComboBox">
        <Setter Property="Padding" Value="10" />
        <Setter Property="Width" Value="300" />
        <Setter Property="Margin" Value="0,5" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Background" Value="{ThemeResource ComboBoxBackground}" />
        <Setter Property="Foreground" Value="{ThemeResource ComboBoxForeground}" />
        <Setter Property="BorderBrush" Value="{ThemeResource ComboBoxBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
    </Style>

    <!--  GridViewItem Style  -->
    <Style
        x:Key="CustomGridViewItemStyle"
        TargetType="GridViewItem">
        <Setter Property="FocusVisualPrimaryBrush" Value="Transparent" />
        <Setter Property="FocusVisualSecondaryBrush" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GridViewItem">
                    <ListViewItemPresenter
                        HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                        VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                        Background="{TemplateBinding Background}"
                        Content="{TemplateBinding Content}"
                        ContentTransitions="{TemplateBinding ContentTransitions}"
                        PointerOverBackground="{ThemeResource ItemSelectedBackgroundBrush}"
                        PointerOverBorderBrush="{ThemeResource ItemSelectedBackgroundBrush}"
                        SelectedBackground="{ThemeResource ItemSelectedBackgroundBrush}"
                        SelectedBorderBrush="{ThemeResource ItemSelectedBackgroundBrush}"
                        SelectedPointerOverBackground="{ThemeResource ItemSelectedBackgroundBrush}"
                        SelectedPointerOverBorderBrush="{ThemeResource ItemSelectedBackgroundBrush}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  ListViewItem Style  -->

    <Style
        x:Key="CustomListViewItemStyle"
        TargetType="ListViewItem">
        <Setter Property="FocusVisualPrimaryBrush" Value="Transparent" />
        <Setter Property="FocusVisualSecondaryBrush" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <ListViewItemPresenter
                        HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                        VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                        Background="{TemplateBinding Background}"
                        Content="{TemplateBinding Content}"
                        ContentTransitions="{TemplateBinding ContentTransitions}"
                        PointerOverBackground="{ThemeResource ItemSelectedBackgroundBrush}"
                        PointerOverBorderBrush="{ThemeResource ItemSelectedBackgroundBrush}"
                        SelectedBackground="{ThemeResource ItemSelectedBackgroundBrush}"
                        SelectedBorderBrush="{ThemeResource ItemSelectedBackgroundBrush}"
                        SelectedPointerOverBackground="{ThemeResource ItemSelectedBackgroundBrush}"
                        SelectedPointerOverBorderBrush="{ThemeResource ItemSelectedBackgroundBrush}" />

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>
